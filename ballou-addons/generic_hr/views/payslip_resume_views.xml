<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="generic_hr_payslip_resume_column_view_form" model="ir.ui.view">
      <field name="name">generic_hr_payslip_resume_column_view_form</field>
      <field name="model">payslip.resume.column</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="code"/>
              </group>
              <group>
                <field name="hr_salary_rule_ids" widget="many2many_tags"/>
                <field name="appears_in_payslip_resume"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="generic_hr_payslip_resume_column_view_tree" model="ir.ui.view">
      <field name="name">generic_hr_payslip_resume_column_view_tree</field>
      <field name="model">payslip.resume.column</field>
      <field name="arch" type="xml">
        <tree string="generic_hr_payslip_resume_column_tree">
          <field name="name"/>
          <field name="code"/>
          <field name="hr_salary_rule_ids" widget="many2many_tags"/>
          <field name="appears_in_payslip_resume"/>
        </tree>
      </field>
    </record>
    <record id="payslip_resume_column_action" model="ir.actions.act_window">
      <field name="name">Colonne état de paie</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">payslip.resume.column</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="payslip_resume_column_menu" name="Colonne état de paie"
              parent="hr_payroll.menu_hr_salary_configuration"
              action="payslip_resume_column_action"/>
  </data>
</odoo>