    </record>

    <!--    ONBOARDING WEEKLY NOTIFICATION DATA    -->
    <record id="weekly_notification" model="onboarding.weekly.notification">
      <field name="notification_day">0</field>
      <field name="title">Tâches en retard</field>
      <field name="text">Vous avez des tâches en retard. Veuillez les terminer s'il vous plaît.</field>
    </record>
  </data>
</odoo>