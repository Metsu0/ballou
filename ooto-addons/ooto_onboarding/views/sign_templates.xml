<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="doc_sign_inherit" inherit_id="sign.doc_sign">
    <xpath expr="//div[hasclass('o_odoo')]/a" position="replace"/>
    <xpath expr="//div[hasclass('o_logo')]/a" position="replace">
      <a href="/my/timeline">
        <img src="/logo.png" alt="Logo"/>
      </a>
    </xpath>
  </template>
</odoo>