    <!-- Profiles access security -->
    <record id="ooto_base_security.superadmin_profile" model="res.users">
      <field name="groups_id" eval="[
           (4,ref('hr_contract.group_hr_contract_manager')),
           (4,ref('ooto_onboarding.group_ooto_onboarding_user')),
           (4,ref('ooto_onboarding.group_ooto_onboarding_manager')),
           (4,ref('survey.group_survey_manager')
           )]"/>
    </record>
    <record id="ooto_base_security.admin_cse_profile" model="res.users">
      <field name="groups_id" eval="[
          (4,ref('hr_contract.group_hr_contract_manager')),
          (4,ref('ooto_onboarding.group_ooto_onboarding_user')),
          (4,ref('ooto_onboarding.group_ooto_onboarding_manager')),
          (4,ref('survey.group_survey_manager')

          )]"/>
    </record>
      <record id="ooto_base_security.open_right_profile" model="res.users">
          <field name="groups_id" eval="[
          (4, ref('ooto_onboarding.group_ooto_onboarding_user')),
          (4,ref('survey.group_survey_manager'))]"/>
      </record>
  </data>
</odoo>