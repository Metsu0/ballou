<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- OOTO Onboarding users -->
    <record model="res.groups" id="group_ooto_onboarding_user">
      <field name="name">OOTO Onboarding User</field>
    </record>

    <!-- OOTO Onboarding managers -->
    <record model="res.groups" id="group_ooto_onboarding_manager">
      <field name="name">OOTO Onboarding Manager</field>
      <field name="implied_ids" eval="[(4, ref('ooto_onboarding.group_ooto_onboarding_user'))]"/>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="only_draft_can_delete" model="ir.rule">
      <field name="name">Only Draft can delete Onboarding</field>
      <field name="model_id" ref="model_hr_onboarding"/>
      <field name="perm_read" eval="0"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="1"/>
      <field name="domain_force">
        [('onboarding_state','=','draft')]
      </field>
    </record>

    <!--Record rules for active/inactive survey stage-->
