<?xml version="1.0" encoding="UTF-8"?>
<template>

  <t t-name="OnboardingTaskNotification" t-extend="Notification">
    <t t-jquery=".o_notification_title > t" t-operation="replace">
      <span t-attf-class="link2task eid_{{widget.eid}}">
        <t t-esc="widget.title"/>
      </span>
    </t>
    <t t-jquery=".o_notification_content" t-operation="append">
      <br/>
      <br/>
      <button type="button" class="btn btn-primary link2showed oe_highlight oe_form oe_button">
        <span>OK</span>
      </button>
      <button type="button" class="btn btn-link link2task">Details</button>
    </t>
  </t>

  <t t-extend="mail.systray.ActivityMenu.Previews">
    <t t-jquery="div.o_preview_title" t-operation="after">
      <div t-if="activity and activity.type == 'onboarding_task'">
        <t t-foreach="activity.task_reminders" t-as="task_reminder">
          <div class="clearfix"/>
          <div>
            <span class="o_task_filter o_task_bold" data-res_model="hr.onboarding.task"
                  t-att-data-res_id="task_reminder.task_id[0]" t-att-data-model_name="activity.name"
                  t-att-title="task_reminder.task_id[1]">
              <span>
                <t t-esc="task_reminder.task_id[1]"/>
              </span>
              <button type="button" t-att-data-res_id="task_reminder.id" class="close o_reminder_close"
                      aria-label="Close">
                <span>&amp;times;</span>
              </button>
            </span>
          </div>
        </t>
      </div>
    </t>
  </t>

</template>
