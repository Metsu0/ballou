<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="ooto_res_config_settings_view_form" model="ir.ui.view">
    <field name="name">ooto.res.config.settings.view.form.inherit.hr.holidays</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="justificatory_size" string="Leaves"
             data-key="ooto_hr_holidays_front">
          <h2>Leave configuration</h2>
          <div class="row mt16 o_settings_container" name="justificatory">
            <group>
              <group>
                <field name="justificatory_size" widget="integer"/>
                <field name="day_exceptional_permission"/>
              </group>
            </group>
          </div>
        </div>
      </xpath>
    </field>
  </record>

</odoo>
