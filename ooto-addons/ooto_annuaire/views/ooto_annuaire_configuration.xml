<odoo>
	<data>
		<record id="annuaire_configuration_form_view" model="ir.ui.view">
			<field name="name">ooto.annuaire.configuration.form.view</field>
			<field name="model">annuaire.configuration</field>
			<field name="arch" type="xml">
				<form create="false">
					<sheet>
						<label for="employees_fields_ids"/>
						<group>
							<field name="employees_fields_ids" nolabel="1">
								<tree editable="bottom">
									<field name="is_readonly" invisible="1"/>
									<field name="fields_id" required="1" options="{'no_create': True}"
												 attrs="{'readonly': [('is_readonly', '=', True)]}"/>
									<field name="is_visible_front_employee" attrs="{'readonly': [('is_readonly', '=', True)]}"/>
								</tree>
							</field>
						</group>
						<label for="contact_fields_ids"/>
						<group>
							<field name="contact_fields_ids" nolabel="1">
								<tree editable="bottom">
									<field name="fields_id" required="1" options="{'no_create': True}"/>
									<field name="is_visible_front_contact" readonly="0"/>
									<field name="logo" widget="image" options='{"size": [90, 90]}'/>
								</tree>
							</field>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="annuaire_configuration_tree_view" model="ir.ui.view">
			<field name="name">ooto.annuaire.configuration.tree.view</field>
			<field name="model">annuaire.configuration</field>
			<field name="arch" type="xml">
				<tree create="false">
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="ooto_annuaire_configuration_action" model="ir.actions.act_window">
			<field name="name">Annuaire</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">annuaire.configuration</field>
			<field name="view_mode">form</field>
			<!--<field name="context">{-->
			<!--'tree_view_ref':'ooto_annuaire.annuaire_configuration_tree_view',-->
			<!--'form_view_ref':'ooto_annuaire.annuaire_configuration_form_view',-->
			<!--}-->
			<!--</field>-->
			<field name="res_id" eval="ref('ooto_annuaire.employee_sect_config_data')"/>
		</record>


		<menuitem id="menu_ooto_annuaire_configuration_parameter_annuaire"
							name="Annuaire"
							parent="ooto_annuaire.menu_ooto_annuaire_configuration"
							action="ooto_annuaire_configuration_action"
							sequence="3"/>
	</data>
</odoo>