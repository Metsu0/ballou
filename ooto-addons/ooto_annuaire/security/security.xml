<odoo>
  <!-- OOTO Annuaire users -->
  <record model="res.groups" id="group_ooto_annuaire_user">
    <field name="name">OOTO Annuaire User</field>
  </record>

  <!-- OOTO Annuaire managers -->
  <record model="res.groups" id="group_ooto_annuaire_manager">
    <field name="name">OOTO Annuaire Manager</field>
    <field name="implied_ids" eval="[(4, ref('ooto_annuaire.group_ooto_annuaire_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
  </record>

  <!-- Profiles access security -->
  <record id="ooto_base_security.superadmin_profile" model="res.users">
    <field name="groups_id" eval="[
           (4,ref('ooto_annuaire.group_ooto_annuaire_user')),
           (4,ref('ooto_annuaire.group_ooto_annuaire_manager'))]"/>
  </record>
  <record id="ooto_base_security.admin_cse_profile" model="res.users">
    <field name="groups_id" eval="[
          (4,ref('ooto_annuaire.group_ooto_annuaire_user')),
          (4,ref('ooto_annuaire.group_ooto_annuaire_manager'))]"/>
  </record>
  <record id="ooto_base_security.open_right_profile" model="res.users">
    <field name="groups_id" eval="[
           (4,ref('ooto_annuaire.group_ooto_annuaire_user'))]"/>
  </record>
</odoo>