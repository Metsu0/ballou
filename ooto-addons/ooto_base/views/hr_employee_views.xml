<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_employee_form_inherit_firstname" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit.firstname</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <field name="name" position="attributes">
        <attribute name="attrs">{'invisible':['|', ('lastname','=',False),('firstname','=',False)]}</attribute>
        <attribute name="readonly">1</attribute>
        <attribute name="force_save">1</attribute>
      </field>
      <xpath expr="//h1//field[@name='name']/.." position="after">
        <group>
          <field name="lastname" readonly="0" required="1"/>
          <field name="firstname" readonly="0" required="1"/>
          <!--<field name="hr_code" force_save="1" readonly="False"/>-->
        </group>
      </xpath>
      <field name="work_email" position="attributes">
        <attribute name="required">1</attribute>
      </field>
    </field>
  </record>
</odoo>