<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="message_notification_email" inherit_id="mail.message_notification_email">
    <xpath expr="//td/img" position="replace">
      <img alt="Etech Basic" src="/sirh_base/static/src/img/etech_logo.png"
           style="padding: 0px; margin: 0px; height: auto; max-width: 200px; max-height: 36px;"/>
    </xpath>
  </template>

  <template id="mail_notification_light" inherit_id="mail.mail_notification_light">
    <xpath expr="//td/img" position="replace">
      <img alt="Etech Basic" src="/sirh_base/static/src/img/etech_logo.png"
           style="padding: 0px; margin: 0px; height: 48px;"/>
    </xpath>
  </template>
</odoo>