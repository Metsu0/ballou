<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
  <data>
    <record id="hr_employee_confirm_view" model="ir.ui.view">
      <field name="name">hr.employee.regen.form</field>
      <field name="model">hr.employee.regen</field>
      <field name="arch" type="xml">
        <form string="Regenerate Direction">
          <footer>
            <button string="Regenerate Direction" name="regen_direction" type="object" default_focus="1"
                    class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>


    <act_window id="launch_the_wizard"
            name="Regenerate Direction"
            binding_model="hr.employee"
            res_model="hr.employee.regen"
            view_mode="form"
            target="new"/>
  </data>
</odoo>