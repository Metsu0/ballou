<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>

    <template id="report_contract_document">
      <t t-call="sirh_hr.sirh_contract_layout">
        <div class="page" style="padding-top: 50px">
          <div id="contract-content">
            <p class="text-center" style="font-size: large">
              EMPLOYMENT CONTRACT
            </p>
          </div>
        </div>
      </t>
    </template>

    <template id="sirh_contract_layout">
      <t t-set="company" t-value="doc.company_id"/>
      <!-- HRN: comment -->
      <!-- <t t-esc="company.update_scss()"/> -->

      <div class="header">
        <div class="row" id="first-row">
          <div class="col-1" id="logo-border">
          </div>
          <div class="col-3" style="margin-top:20px;">
            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                 style="width: 250px;height: 180px;margin-left: -55px;" alt="Logo"/>
          </div>
          <div class="col-8 text-right" style="margin-top:22px;"/>
        </div>
        <div t-if="company.logo or company.report_header" class="row zero_min_height">
        </div>
      </div>

      <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
           t-att-data-oe-lang="o and o.env.context.get('lang')">
        <t t-call="web.address_layout"/>
        <t t-raw="0"/>
      </div>

      <div class="footer o_standard_footer">
        <div class="text-center" id="sirh-footer" style="border-top: 1px solid black;">
          <div name="financial_infos">
            <span t-field="company.report_footer"/>
          </div>
        </div>
      </div>
    </template>

    <template id="report_contract">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-call="sirh_hr.report_contract_document" t-lang="doc.employee_id.user_id.partner_id.lang"/>
        </t>
      </t>
    </template>
  </data>
</odoo>