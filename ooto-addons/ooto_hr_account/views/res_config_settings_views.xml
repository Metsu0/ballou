<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="hr_account_res_config_settings_view_form" model="ir.ui.view">
      <field name="name">hr.account.res.config.settings.view.form.inherit.base.setup</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='invite_users']/div/div[1]" position="after">
          <div class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane">
              <field name="hide_home"/>
            </div>
            <p class="o_form_label">Hide home</p>
            <div class="text-muted">
              Hide home menu page account
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>