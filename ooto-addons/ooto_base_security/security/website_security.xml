<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <record id="group_website_designer_cse" model="res.groups">
      <field name="name">Editor and Designer CSE</field>
      <field name="implied_ids" eval="[(4, ref('website.group_website_publisher'))]"/>
      <field name="category_id" ref="base.module_category_website"/>
    </record>

    <record id="website.group_website_designer" model="res.groups">
      <field name="implied_ids"
             eval="[(3,ref('website.group_website_publisher')),(4, ref('group_website_designer_cse'))]"/>
    </record>

    <!-- For Market access -->
    <record model="ir.module.category" id="module_category_website_sale">
      <field name="name">eCommerce Sales</field>
      <field name="sequence">20</field>
    </record>

    <record id="group_website_market" model="res.groups">
      <field name="name">Market access</field>
      <field name="category_id" ref="module_category_website_sale"/>
    </record>

    <record id="group_blog_web_access" model="res.groups">
      <field name="name">Blog access</field>
      <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_super_admin_access" model="res.groups">
      <field name="name">Super admin access</field>
      <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!--  Deactivate Rules for res_partner: portal/public   -->
    <function model="ir.rule" name="write">
      <value model="ir.rule" eval="[ref('base.res_partner_portal_public_rule')]"/>
      <value eval="{'active': False}"/>
    </function>
  </data>
</odoo>